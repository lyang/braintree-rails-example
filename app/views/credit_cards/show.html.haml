- model_class = BraintreeRails::CreditCard
.page-header
  %h1=t '.title', :default => model_class.model_name.human
- [:card_type, :masked_number, :cardholder_name, :expiration_date].each do |attribute|
  %p
    %strong= model_class.human_attribute_name(attribute) + ':'
    %br
    = @credit_card.send(attribute)
- [:first_name, :last_name, :company, :street_address, :extended_address, :locality, :country_name].each do |billing_address_attribute|
  %p
    %strong= BraintreeRails::Address.human_attribute_name(billing_address_attribute) + ':'
    %br
    = @credit_card.billing_address.send(billing_address_attribute)

.form-actions
  = link_to 'Back', user_customer_path(@user), :class => 'btn'
  = link_to 'Edit', edit_user_customer_credit_card_path(@user, @credit_card.id), :class => 'btn'
  = link_to 'Destroy', user_customer_credit_card_path(@user, @credit_card.id), :method => "delete", :confirm => 'Are you sure?', :class => 'btn btn-danger'